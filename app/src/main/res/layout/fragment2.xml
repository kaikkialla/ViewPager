<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#ac76c1" android:id="@+id/Root_container">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-64dp"
            android:layout_above="@+id/Product_Preview"
            android:layout_toRightOf="@+id/Product_Preview">

            <TextView
                android:id="@+id/Product_Name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_above="@+id/Product_Category"
                android:layout_toRightOf="@+id/Product_Category"
                android:textSize="32dp" android:textColor="#fff"
                android:textStyle="bold"
                android:text="TEXT"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Product_Category"
                android:textSize="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="TEXT"
                android:paddingLeft="16dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/Product_Preview"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/Discover_More_Button"
        android:layout_height="32dp"
        android:layout_width="150dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rectangle"

        android:textSize="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="DISCOVER MORE"
        />


    <RelativeLayout
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:id="@+id/Header">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/My_Account_Button"
            android:layout_marginLeft="24dp"
            android:textSize="12dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="MY ACCOUNT"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_filter_list_black_24dp"
            android:id="@+id/Filters_Button"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>