<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobolFragment">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.firstpage.firstpage.MainActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/mbg" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />
            <TextView
                android:id="@+id/main_text"
                android:layout_marginTop="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:text="Минималистичный дизайн вашей \nквартиры \n\nПрямо в \nприложении"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/circles"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="31dp"
                android:background="@drawable/round_corner"
                android:padding="20dp"
                android:text="Продолжить"
                android:textAllCaps="false"
                android:textSize="19sp" />
            <LinearLayout
                android:id="@+id/circles"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>